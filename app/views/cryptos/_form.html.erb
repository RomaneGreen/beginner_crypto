<%= form_with(model: crypto, local: true) do |form| %>
<% if crypto.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(crypto.errors.count, "error") %>
      prohibited this crypto from being saved:</h2>

    <ul>
      <% crypto.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="field">
  <%= form.label :symbol,class:"fcrypto" %>
  <!-- <%= form.text_field :symbol,required: :true %> -->
  <%= form.select :symbol, [ 'XRP', 'BTC', 'LTC', 'ETH',
  'BCH','XLM','EOS','UDST','ADA','MIOTA','TRX','XMR','DASH','ETC','NEO','BNB','XEM','VET','XTZ','ZEC','OMG','ONT','ZRX','NANO','QTUM','BCN','BTG','ICX','ZIL','DCR','BTS','DGB','MKR','DOGE','AE','STEEM','SC','XVG','BAT','REP','WAVES','BTM','NPXS','BCD','PPT','MOAC','WTC','GNT','RHOC','ETP','SNT'
  ], :prompt => 'Select One' %>
</div>

<div class="field">

  <%= form.number_field :user_id ,value: current_user.id,type: "hidden" %>
</div>

<div class="field">
  <%= form.label :cost_per,class:"fcrypto" %>
  <%= form.text_field :cost_per,required: :true %>
</div>

<div class="field">
  <%= form.label :amount_owned,class:"fcrypto" %>
  <%= form.text_field :amount_owned,required: true %>
</div>

<div class="actions">
  <%= form.submit class:"btn btn-warning" %>
</div>
<% end %>